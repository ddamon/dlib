<?xml version="1.0" encoding="utf-8"?>
<!-- 不带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 黑色背景 -->
    <item>
        <shape>
            <solid android:color="@color/black" />
        </shape>
    </item>
    <!-- 白色背景 -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="@color/corner_focus" />
        </shape>
    </item>

</layer-list>