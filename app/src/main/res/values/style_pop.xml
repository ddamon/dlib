<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- PopupWindow窗口淡入淡出动画 -->
    <style name="animationFade">
        <item name="android:windowEnterAnimation">@anim/flipper_top_in</item>
        <item name="android:windowExitAnimation">@anim/flipper_top_out</item>
    </style>
    <!-- 弹窗平移右进右出 -->
    <style name="popupAnimation_push_right" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_right_in</item>
        <item name="android:windowExitAnimation">@anim/push_right_out</item>
    </style>
    <!-- 弹窗平移右进左出 -->
    <style name="popupAnimation_flip_right" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/flipper_right_in</item>
        <item name="android:windowExitAnimation">@anim/flipper_left_out</item>
    </style>
    <!-- 弹窗平移左进左出 -->
    <style name="popupAnimation_flip_left_in_left_out" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/flipper_left_in</item>
        <item name="android:windowExitAnimation">@anim/flipper_left_out</item>
    </style>
    <!-- 弹窗平移右进右出 -->
    <style name="popupAnimation_flip_right_in_right_out" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/flipper_right_in</item>
        <item name="android:windowExitAnimation">@anim/flipper_right_out</item>
    </style>
    <!-- 弹窗显隐缩放 -->
    <style name="popupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
    <!-- 弹窗下拉 -->
    <style name="popupAnimation_drop" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter_drop</item>
        <item name="android:windowExitAnimation">@anim/popup_exit_drop</item>
    </style>
    <!-- PopupWindow出现和消失动画-从左下到右上-加速器为加速出现:加速消失 -->
    <style name="popupAnimation_leftbottom2righttop" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_enter_lb2rt</item>
        <item name="android:windowExitAnimation">@anim/scale_exit_rt2lb</item>
    </style>
    <!-- PopupWindow出现和消失动画-从右上到左下-加速器为加速出现:加速消失 -->
    <style name="popupAnimation_righttop2leftbottom" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_enter_rt2lb</item>
        <item name="android:windowExitAnimation">@anim/scale_exit_lb2rt</item>
    </style>
    <!-- 弹窗平移上进上出 -->
    <style name="popupAnimation_push_top" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>
    <!-- 弹窗平移下进下出 -->
    <style name="popupAnimation_push_bottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- PopupWindow窗口淡入淡出动画-下进下出 -->
    <style name="animation_fade_bottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/flipper_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/flipper_bottom_out</item>
    </style>

</resources>